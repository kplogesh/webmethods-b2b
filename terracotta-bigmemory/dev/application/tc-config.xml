<tc:tc-config xmlns:tc="http://www.terracotta.org/config">

    <servers>
    <mirror-group>
        <server host="terracotta-bigmemorymax-0.terracotta-bigmemorymax-h.dev.svc.cluster.local" name="terracotta-bigmemorymax-0.terracotta-bigmemorymax-h.dev.svc.cluster.local" >
        <tsa-port>9510</tsa-port>
        <management-port>9540</management-port>
        <tsa-group-port>9530</tsa-group-port>
        <dataStorage size="4g">
            <offheap size="2g"/>
            <hybrid/>
        </dataStorage>
        <data>/opt/softwareag/run/data</data>
        <data-backup>/opt/softwareag/run/backup</data-backup>
        <logs>/opt/softwareag/run/logs</logs>
        </server>
    </mirror-group>
    <restartable enabled="true"/>
    </servers>
    <clients>
    <logs>/opt/softwareag/run/client-logs</logs>
    </clients>
</tc:tc-config>